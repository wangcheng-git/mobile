/* component/password- popup/password- popup.wxss */
.popup_shroud {
  position: absolute;
  top: 0px; left:0px;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100px;
}
.popup_psw {
  width: 100%;
  position: absolute;
  left: 0px;
  bottom: 0px; 
  background-color: #fff;
  z-index: 101px;
}
.popup_title {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.3);
}
.popup_title text {
  display: inline-block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  text-align: center;
}
.popup_title image {
  position: absolute;
  right: 0px;
  top: 0px;
  display: block;
  width: 36rpx;
  height: 36rpx;
  padding: 22rpx 20rpx;
}

.popup_money {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 96rpx;
  text-align: center;
  margin: 50rpx 0 30rpx 0;
}
.popup_money text:first-child {
  font-size: 48rpx;
}
.popup_info-item {
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.popup_info-item text:first-child {
  color: #999;
}
.popup_info-item text:last-child {
  float: right;
}
.popup_input {
  margin: 15rpx 20rpx 30rpx;
}
.popup_input text {
  display: block;
  font-size: 26rpx;
  margin-bottom: 10rpx;
  color: #999;
}
.popup_input_item {
  display: inline-block;
  width: 25%;
  margin: 0 auto;
  height: 98rpx;
  line-height: 120rpx;
  text-align: center;
  border: 1rpx solid #e2e2e2;
  border-right: none;
  box-sizing:border-box;
  vertical-align: top;
}
.popup_input view:first-of-type {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.popup_input view:last-of-type {
  border-right: 1rpx solid #e2e2e2;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.popup_input_item text {
  display: inline-block;
  width: 30rpx;
  height: 30rpx; 
  border-radius: 30rpx; 
  background-color: #666;
}
.popup_input input {
  position: absolute;
  left: 999px;
}